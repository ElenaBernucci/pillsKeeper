<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".FarmaciInserireUnFarmaco2">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Quanto ne prendi?"
            android:textColor="#8BD9EA"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Avanti"
            android:textColor="#F28891"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch2" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="87dp"
            android:layout_height="22dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="Piú di una"
            android:textColor="#454773"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonMore2" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="321dp"
            android:layout_height="21dp"
            android:layout_marginTop="12dp"
            android:text="É un farmaco continuativo:"
            android:textColor="@color/blu"
            android:textColorHighlight="@color/blu"
            android:textColorHint="@color/blu"
            android:textColorLink="@color/blu"
            android:textSize="18sp"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.422"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDose2" />

        <ImageButton
            android:id="@+id/imageButtonMore2"
            android:layout_width="112dp"
            android:layout_height="101dp"
            android:layout_marginTop="40dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/todo"
            android:padding="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:scaleType="fitStart"
            android:tint="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.453"
            app:layout_constraintStart_toEndOf="@+id/imageButtonOne2"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:srcCompat="@mipmap/two" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="69dp"
            android:layout_height="23dp"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:text="Mezza"
            android:textColor="#454773"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView14"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonHalf2" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Altra dose:"
            android:textColor="#454773"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/editTextDose2"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="71dp"
            android:layout_height="25dp"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:text="Una"
            android:textColor="#454773"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonOne2" />

        <EditText
            android:id="@+id/editTextDose2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_view_border"
            android:ems="10"
            android:hint="Dose precisa"
            android:inputType="textPersonName"
            android:padding="4dp"
            android:shadowColor="#000000"
            android:singleLine="false"
            android:textColor="#454773"
            android:textColorHighlight="#454773"
            android:textColorHint="#454773"
            android:textColorLink="#454773"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="197dp"
            android:layout_height="23dp"
            android:layout_marginStart="107dp"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="107dp"
            android:layout_marginRight="107dp"
            android:progress="66"
            android:progressTint="@color/azzurro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/imageButtonOne2"
            android:layout_width="70dp"
            android:layout_height="76dp"
            android:layout_marginTop="56dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/todo"
            android:padding="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:scaleType="fitStart"
            android:tint="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:srcCompat="@mipmap/one" />

        <ImageButton
            android:id="@+id/imageButtonHalf2"
            android:layout_width="70dp"
            android:layout_height="76dp"
            android:layout_marginTop="56dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/todo"
            android:padding="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:scaleType="fitStart"
            android:tint="#00FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonOne2"
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:srcCompat="@mipmap/half" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>